<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RoomNameActivity">

<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ff3e3e"
    android:id="@+id/toolbar">

    <ImageView
        android:id="@+id/iv_onBackPress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_backspace">

    </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEETING ROOM"
            android:gravity="center"
            android:textColor="#FFF"
            android:textStyle="bold"/>



</androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/tv_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/room"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_meeting_platform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_room"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/select_room"
        android:textColor="@color/black" />

    <RelativeLayout

        android:id="@+id/ll_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_meeting_platform"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_zoom"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/zoom" />

        <TextView
            android:id="@+id/tv_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_zoom"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:text="ZOOM"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/iv_webex"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/iv_zoom"
            android:background="@drawable/webex" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_webex"
            android:layout_marginLeft="130dp"
            android:layout_toRightOf="@+id/tv_zoom"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"

            android:text="WEBEX"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_meeting1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_meeting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bluejens"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bluejens" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_bluejens"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"

            android:text="BLUE JENS"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_msTeams"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/iv_bluejens"
            android:background="@drawable/msteams" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_msTeams"
            android:layout_marginLeft="170dp"
            android:gravity="center"
            android:text="MS TEAMS"
            android:textStyle="bold"
            android:textColor="@color/black"

            android:textSize="12sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_googleMeet"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/ll_meeting1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/googlemeet" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_googleMeet"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"

        android:text="Google Meet"
        android:textSize="12sp" />


</RelativeLayout>